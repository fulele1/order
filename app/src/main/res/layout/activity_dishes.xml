<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.mysurfaceview.orderapp.DishesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="桌号 "
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    />

                <Button
                    android:id="@+id/btn_table_num_dishes"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="101"
                    android:background="@mipmap/spinner_click_press"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/img_dishes_dishes"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_launcher"
                    ></ImageView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_point_name_dishes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="米饭"
                        android:layout_marginTop="120dp"
                        android:textColor="#ffff00"
                        android:background="#ff0066"
                        />
                    <TextView
                        android:id="@+id/txt_point_price_dishes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.0"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffff00"
                        android:background="#ff0066"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菜品介绍 "
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txt_dishesIntroduce_dishes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面饭是人们每餐必备的主食，南北方人民啦啦啦啦啦啦啦啦啦啦"
                    ></TextView>
            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菜品 "
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/btn_dishes_dishes"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="全部"
                    android:background="@mipmap/spinner_click_press"
                    />


            </LinearLayout>

            <ExpandableListView
                android:layout_marginTop="20dp"
                android:id="@+id/expand_dishes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#666666"
                android:groupIndicator="@null"></ExpandableListView>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/layout_menu_bottom"
        >

        <Button
            android:id="@+id/btn_order_dishes"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@mipmap/btn_choosedish"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="500dp"/>

    </LinearLayout>


</LinearLayout>
