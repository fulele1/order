<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.mysurfaceview.orderapp.ShowActivity">




        <Gallery
            android:id="@+id/gly_show"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:background="#ffffff"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            ></Gallery>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/layout_menu_bottom">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        >
        <ImageButton
            android:id="@+id/img_order_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_choosedish"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/img_orde_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_choosedish"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/img_ord_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_choosedish"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/img_or_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_choosedish"
            android:background="@null"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/img_more_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_choosedish"
            android:background="@null"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>



</LinearLayout>
